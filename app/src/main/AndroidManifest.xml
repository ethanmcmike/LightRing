<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ethanmcmike.lightring">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="ethanmcmike.lightring.activities.AppListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED"/>
            </intent-filter>
        </activity>

        <activity android:name="ethanmcmike.lightring.activities.DeviceList"/>
        <activity android:name="ethanmcmike.lightring.Main"/>
        <activity android:name="ethanmcmike.lightring.Simon.SimonActivity"/>
        <activity android:name="ethanmcmike.lightring.Flashlight.FlashlightActivity"/>
        <activity android:name="ethanmcmike.lightring.activities.RecieverActivity"/>
        <activity android:name="ethanmcmike.lightring.activities.SimulatorActivity"/>

    </application>

</manifest>
